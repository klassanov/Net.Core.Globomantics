<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <environment include="Development">
        <link rel="stylesheet" asp-href-include="css/*" asp-href-exclude="css/bundle.min.css">
    </environment>

    <environment exclude="Development">
        <link rel="stylesheet" asp-href-include="css/bundle.min.css">
    </environment>

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-2">
                <img asp-append-version="true" alt="logo" src="~/img/logo.png" />
            </div>
            <div class="col-md-10 titlecol">
                <span class="title">@ViewBag.Title</span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @RenderBody()
            </div>
        </div>
        <div class="row">
            @await Component.InvokeAsync("Statistics")
        </div>
    </div>
</body>
</html>
